<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_sh_cloud_provider_tree" model="ir.ui.view">
            <field name="name">sh_cloud_provider_tree</field>
            <field name="model">sh.cloud.provider</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <list string="Cloud Providers">
                    <field name="name" />
                    <field name="token" />
                    <field name="_type"/>
                    <field name="state"  readonly="1" widget="boolean_toggle"/>
                    <field name="_default"  readonly="1" widget="boolean_toggle"/>
                </list>
            </field>
        </record>
        <!-- form view -->
        <record id="view_sh_cloud_provider_form" model="ir.ui.view">
            <field name="name">sh_cloud_provider_form</field>
            <field name="model">sh.cloud.provider</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Cloud Provider">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="token" />
                                <field name="state"  widget="boolean_toggle"/>
                                <field name="_type"/>
                                <field name="_default"  widget="boolean_toggle"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_sh_cloud_provider_search" model="ir.ui.view">
            <field name="name">sh_cloud_provider</field>
            <field name="model">sh.cloud.provider</field>
            <field name="arch" type="xml">
                <search string="Cloud Provider">
                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <field name="name" select="True"/>
                    <field name="_type"  select="True"/>
                    <field name="state"  select="True"/>
                    <field name="_default" select="True"/>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_sh_cloud_provider_kanban" model="ir.ui.view" >
            <field name="name">sh_cloud_provider</field>
            <field name="model">sh.cloud.provider</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <field name="name" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <i class="fa fa-cloud"></i>  <a type="open"><field name="name"/></a>
                                    </h4>
                                     <ul>
                                        <li>
                                            State : <field name='state' widget="boolean_toggle"/>
                                        </li>
                                        <li>
                                            Type : <field name='_type'/>
                                        </li>
                                        <li invisible="_default==False">
                                            Default : <field name='_default' readonly="1" widget="boolean_toggle"/>
                                        </li>
                                    </ul>
                                </div>                               
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <!-- graph -->
        <record id="view_sh_cloud_provider_graph" model="ir.ui.view">
            <field name="name">sh_cloud_provider</field>
            <field name="model">sh.cloud.provider</field>
            <field name="arch" type="xml">
                <graph string="Cloud Provider" type="bar">
                    <!--<field name="so_server"/>-->
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_sh_cloud_provider" model="ir.actions.act_window">
            <field name="name">Cloud Provider</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sh.cloud.provider</field>
            
            <field name="view_mode">kanban,list,form,graph</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Cloud Provider
                </p><p>
                Click the Create button to add a new Cloud Provider
                </p>
            </field>
        </record>

    </data>
</odoo>