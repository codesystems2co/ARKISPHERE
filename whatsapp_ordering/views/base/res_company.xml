<odoo>
  <data>

    <record id="meta_res_company_view" model="ir.ui.view">
      <field name="name">company.template.form.meta</field>
      <field name="model">res.company</field>
      <field name="inherit_id" ref="base.view_company_form"/>
      <field name="priority">1</field>
      <field name="arch" type="xml">

        <xpath expr="//page[last()]" position="after">
          <page string="Whatsapp">
              <group>
                <h1><i class="fa fa-gear"></i></h1>
              </group>
              <group>
                <field name="meta_phone_number"/>
                <field name="meta_access_token" password="True"/>
                <field name="meta_webhook" widgetr="url"/>
              </group>
              <group>
                <h1><i class="fa fa-whatsapp"></i></h1>
              </group>
              <group>
                <field name="meta_account_creation" widget="boolean_toggle"/>
                <field name="meta_sale_order_confirmation" widget="boolean_toggle"/>
                <field name="meta_payment_transaction_confirmation" widget="boolean_toggle"/>
                <field name="meta_invoice_confirmation" widget="boolean_toggle"/>
                <field name="meta_coupon_information" widget="boolean_toggle"/>
                <field name="meta_delivery_confirmation" widget="boolean_toggle"/>
                <field name="meta_product_creation" widget="boolean_toggle"/>
              </group>
          </page>
        </xpath>

      </field>
    </record>

  </data>
</odoo>