<odoo>
  <data>

    <record id="meta_message_template_view" model="ir.ui.view">
      <field name="name">message.template.form.meta</field>
      <field name="model">mail.template</field>
      <field name="inherit_id" ref="mail.email_template_form"/>
      <field name="priority">1</field>
      <field name="arch" type="xml">

        <field name="model_id" position="before">
          <field name="meta_is_whatsapp" widget="boolean_toggle"/>
          <field name="meta_type" invisible="meta_is_whatsapp == False" class="w-100"/>
        </field>

        <field name="subject" position="attributes">
          <attribute name="invisible">meta_type == "text" and meta_is_whatsapp == True</attribute>
        </field>

        <page name="email_configuration" position="attributes">
          <attribute name="invisible">meta_is_whatsapp == True</attribute>
        </page>

        <page name="email_settings" position="attributes">
          <attribute name="invisible">meta_is_whatsapp == True</attribute>
        </page>

        <page name="content" position="after">
          <page string="Whatsapp" invisible='meta_is_whatsapp == False'>
            <group>
              <field name="meta_preview_url" widget="boolean_toggle" invisible='meta_type != "text"'/>
              <field name="lang"/>
              <field name="description"/>
            </group>
          </page>
        </page>

      </field>
    </record>


    <record id="action_meta_whatsapp_templates" model="ir.actions.act_window">
      <field name="name">Whatsapp Templates</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">mail.template</field>
      <field name="view_mode">tree,form</field>
      <field name="domain">[('meta_is_whatsapp', '=', True)]</field>     
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
            Click to add a new Template
        </p>
        <p>
            Click the Create button to add a new Template
        </p>
      </field>
    </record>

    <record model="ir.actions.act_window" id="mail.action_email_template_tree_all">
            <field name="name">Email Templates</field>
            <field name="res_model">mail.template</field>
            <field name="view_mode">form,tree</field>
            <field name="view_id" ref="mail.email_template_tree" />
            <field name="search_view_id" ref="mail.view_email_template_search"/>
            <field name="context">{'search_default_base_templates': 1}</field>
            <field name="domain">[('meta_is_whatsapp', '=', False)]</field>  
        </record>

  </data>
</odoo>