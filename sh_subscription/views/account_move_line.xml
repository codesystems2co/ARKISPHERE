<odoo>
  <data>

    <record id="account_move_tree_subscription" model="ir.ui.view">
        <field name="name">account.move.tree.subscription</field>
        <field name="model">account.move</field>
         <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//list/field[@name='name']" position="after">
                <field name="is_subscription"/>
                <field name="last_period"/>
                <field name="next_period"/>
                <field name="multiplier_factor_label"/>
            </xpath>  
        </field>
    </record>

  </data>
</odoo>