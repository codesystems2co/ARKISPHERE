<odoo>
    <data>

        <template id="signup_sh_fields_inherit" inherit_id="auth_signup.fields" name="OAuth Signup Github">
           <xpath expr="//div[hasclass('field-login')]" position="before">

                <!-- PLATFORM BUTTONS AUTH-->
                <div class="form-group field-platform">
                    <div class="btn platform-github btn-selected" platform="github" title="Sign Up with GITHUB">
                        <i class="fa fa-github"/>
                    </div>
                    <div class="btn platform-bitbucket" platform="bitbucket" title="Sign Up with Bitbucket">
                        <i class="fa fa-bitbucket"></i>
                    </div>
                    <div class="s_text_highlight o_colored_level o_cc o_cc3 my-3 text-center w-100" data-snippet="s_text_highlight" data-name="Texto resaltado">
                        <div class="container">
                            <h3>Importante</h3>
                            <p>El token debe tener permisos para crear repositorios</p>
                        </div>
                    </div>
                    
                </div>

                <!-- PLATFORM FIELDS AUTH-->
                <div class="form-group field-username">
                    <label for="username">Username</label>
                    <input type="text" name="username" t-att-value="username" id="username" class="form-control form-control-sm" placeholder="gitname" required="required" t-att-readonly="'readonly' if only_passwords else None" t-att-autofocus="'autofocus' if username and not only_passwords else None"/>
                </div>

                <div class="form-group field-token">
                    <i class="fa fa-unlock"/>
                    <a target="_blank" href="https://github.com/settings/tokens">Obtener Token en Github</a>
                </div>
                <div class="form-group field-access_token">
                    <label for="access_token">Access Token</label>
                    <input type="password" name="access_token" t-att-value="access_token" id="access_token" class="form-control form-control-sm" placeholder="xxxxxxxxxx..." required="required"/>
                </div>

                <!-- GIT PROPERTIES-->
                <input type="hidden" name="is_autor" value="True"/>
                <input type="hidden" name="is_collaborator" value="False"/>
                <input type="hidden" name="platform" value="github"/>
                <input type="hidden" name="identifier" value=""/>
                <input type="hidden" name="_gpassword" value=""/>
                <input type="hidden" name="html_url" value=""/>

            </xpath>
        </template>


        <template id="signup_sh_inherit" inherit_id="auth_signup.signup" name="OAuth Signup Github">
            <xpath expr="//div[hasclass('oe_login_buttons')]" position="before">
                <button class="btn btn-primary btn-block" id="signup-git">
                    <i class="fa fa-github"></i>  Sign Up</button>
            </xpath>
        </template>

        <template id="web_login_inherit" inherit_id="web.login" name="OAuth Signup Github">
            <xpath expr="//div[hasclass('field-login')]" position="before">

                <!-- PLATFORM BUTTONS AUTH-->
                <div class="form-group field-platform">
                    <div class="btn platform-github btn-selected" platform="github" title="Sign Up with GITHUB">
                        <i class="fa fa-github"></i>
                    </div>
                    <div class="btn platform-bitbucket" platform="bitbucket" title="Sign Up with BITBUCKET">
                        <i class="fa fa-bitbucket"></i>
                    </div>
                    <!--<div class="btn platform-gitlab" platform="gitlab" title="Sign Up with GITLAB"><i class="fa fa-gitlab"></i></div>-->
                    <div class="btn platform-odoo" platform="odoo" title="Sign Up with ODOO">
                        <i class="fa fa-opera"></i>
                    </div>
                </div>

                <!-- PLATFORM FIELDS AUTH-->
                <div class="form-group field-username">
                    <label for="username">Username</label>
                    <input type="text" name="username" t-att-value="username" id="username" class="form-control form-control-sm" placeholder="gitname" required="required" t-att-readonly="'readonly' if only_passwords else None" t-att-autofocus="'autofocus' if username and not only_passwords else None" />

                </div>

                <!-- GIT PROPERTIES-->
                <input type="hidden" name="is_autor" value="True"/>
                <input type="hidden" name="is_collaborator" value="False"/>
                <input type="hidden" name="platform" value="github"/>
                <input type="hidden" name="identifier" value=""/>
                <input type="hidden" name="_gpassword" value=""/>
                <input type="hidden" name="html_url" value=""/>

            </xpath>

            <xpath expr="//div[hasclass('oe_login_buttons')]" position="inside">
                <button class="btn btn-primary btn-block" id="signup-git">
                    <i class="fa fa-unlock-alt"></i>  Sign In</button>
            </xpath>

        </template>

        <function model="ir.model.fields" name="formbuilder_whitelist">
            <value>res.partner</value>
            <value eval="['is_autor', 'is_collaborator', 'platform','identifier', '_gpassword', 'html_url', 'username', 'access_token']"/>
        </function>

    </data>
</odoo>
