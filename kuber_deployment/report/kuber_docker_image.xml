<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <report id="report_kubernetskuber_docker_image_menu" string="My addon - Tags Built"
         model="kuber.docker_image" report_type="qweb-pdf" 
         file="kuber.docker_image"  name="kuber_deployment.kubernetskuber_docker_image_report" />

        <!-- document template -->
        <template id="kuber_deployment.kubernetskuber_docker_image_report_document" >
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
                <div class="page">
                    <h2>
                        Tags Built: <span t-field="doc.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2">
                            <strong> name = kuber.docker image</strong>
                            <p class="m-0" t-field="doc._name = kuber.docker_image" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong> description</strong>
                            <p class="m-0" t-field="doc._description" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Version</strong>
                            <p class="m-0" t-field="doc.version" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Application Deployment</strong>
                            <p class="m-0" t-field="doc.kuber_deploy"/>
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="kuber_deployment.kubernetskuber_docker_image_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="kuber_deployment.kubernetskuber_docker_image_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>