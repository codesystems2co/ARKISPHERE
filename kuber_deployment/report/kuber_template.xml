<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <report id="report_kuber_template_menu" string="My addon - Templates"
         model="kuber.template" report_type="qweb-pdf" 
         file="kuber.template"  name="kuber_deployment.kuber_template_report" />

        <!-- document template -->
        <template id="kuber_deployment.kuber_template_report_document" >
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
                <div class="page">
                    <h2>
                        Templates: <span t-field="doc.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2">
                            <strong> description</strong>
                            <p class="m-0" t-field="doc._description" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong> type</strong>
                            <p class="m-0" t-field="doc._type" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Content</strong>
                            <p class="m-0" t-field="doc.content" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Application Deployment</strong>
                            <p class="m-0" t-field="doc.kuber_deploy"/>
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="kuber_deployment.kuber_template_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="kuber_deployment.kuber_template_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>