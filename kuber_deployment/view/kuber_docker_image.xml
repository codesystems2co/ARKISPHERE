<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_kubernetskuber_docker_image_tree" model="ir.ui.view">
            <field name="name">kubernetskuber_docker_image_tree</field>
            <field name="model">kuber.docker_image</field>
            
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <list string="Tags Built">
                    <field name="name" />
                    <field name="version" />
                    <field name="kuber_deploy" />
                </list>
            </field>
        </record>
        <!-- form view -->
        <record id="view_kubernetskuber_docker_image_form" model="ir.ui.view">
            <field name="name">kubernetskuber_docker_image_form</field>
            <field name="model">kuber.docker_image</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Tags Built">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Tags Built Name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="version" />
                            </group>
                            <group>
                                <field name="kuber_deploy" />
                            </group>
                        </group>
                        <notebook>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_kubernetskuber_docker_image_search" model="ir.ui.view">
            <field name="name">kubernetskuber_docker_image</field>
            <field name="model">kuber.docker_image</field>
            <field name="arch" type="xml">
                <search string="Tags Built">
                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <filter string="Version" name="filter_by_version" domain="[('version','=','')]" />
                    <field name="name" select="True"/>
                    <field name="version" select="True"/>
                    <field name="kuber_deploy" select="True"/>
                    <group string="Group By..">
                        <filter string="Application Deployment" domain="[]" name="group_by_kuber_deploy" context="{'group_by':'kuber_deploy'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_kubernetskuber_docker_image_kanban" model="ir.ui.view" >
            <field name="name">kubernets_kuber_docker_image</field>
            <field name="model">kuber.docker_image</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <field name="name" />
                    <field name="version" />
                    <field name="kuber_deploy" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>
                                        <li>
                                            Version: <field name="version"></field>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <!-- graph -->
        <record id="view_kubernetskuber_docker_image_graph" model="ir.ui.view">
            <field name="name">kubernetskuber_docker_image</field>
            <field name="model">kuber.docker_image</field>
            <field name="arch" type="xml">
                <graph string="Tags Built" type="bar">
                    <field name="version"/>
                    <field name="kuber_deploy"/>
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_kubernetskuber_docker_image" model="ir.actions.act_window">
            <field name="name">Tags Built</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kuber.docker_image</field>
            
            <field name="view_mode">kanban,list,form,graph</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Tags Built
                </p><p>
                Click the Create button to add a new Tags Built
                </p>
            </field>
        </record>        
    </data>
</odoo>