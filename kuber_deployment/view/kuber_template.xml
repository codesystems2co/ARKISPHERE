<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_kuber_template_tree" model="ir.ui.view">
            <field name="name">kuber_template_tree</field>
            <field name="model">kuber.template</field>
            
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <list string="Templates">
                    <field name="name" />
                    <field name="_type" />
                    <field name="priority" />
                    <field name="expose_public" />
                    <field name="expose_selector" />               
                    <field name="app_port" />
                    <field name="kuber_deploy" />
                </list>
            </field>
        </record>
        <!-- form view -->
        <record id="view_kuber_template_form" model="ir.ui.view">
            <field name="name">kuber_template_form</field>
            <field name="model">kuber.template</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Templates">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Templates Name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="_type" />
                                <field name="content" />
                                <field name="expose_public" />
                                <field name="expose_selector" />    
                                <field name="app_port" />                            
                                <field name="priority" />                                
                            </group>
                            <group>
                                <field name="kuber_deploy" />
                            </group>
                        </group>
                        <notebook>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_kuber_template_search" model="ir.ui.view">
            <field name="name">kuber_template</field>
            <field name="model">kuber.template</field>
            <field name="arch" type="xml">
                <search string="Templates">
                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <filter string=" type" name="filter_by__type" domain="[('_type','=','')]" />
                    <filter string="Content" name="filter_by_content" domain="[('content','=','')]" />
                    <field name="name" select="True"/>
                    <field name="_type" select="True"/>
                    <field name="content" select="True"/>
                    <field name="app_port" />
                    <field name="kuber_deploy" select="True"/>
                    <group string="Group By..">
                        <filter string="Application Deployment" domain="[]" name="group_by_kuber_deploy" context="{'group_by':'kuber_deploy'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_kuber_template_kanban" model="ir.ui.view" >
            <field name="name">kuber_template</field>
            <field name="model">kuber.template</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <field name="name" />
                    <field name="_type" />
                    <field name="content" />
                    <field name="expose_public" />
                    <field name="expose_selector" />
                    <field name="kuber_deploy" />
                    <field name="priority" />
                    
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>
                                        <li>
                                            Type: <field name="_type"></field>
                                        </li>
                                        <li>
                                            Exposed: <field name="expose_public"></field>
                                        </li>
                                        <li>
                                            Priority: <field name="priority"></field>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <!-- graph -->
        <record id="view_kuber_template_graph" model="ir.ui.view">
            <field name="name">kuber_template</field>
            <field name="model">kuber.template</field>
            <field name="arch" type="xml">
                <graph string="Templates" type="bar">
                    <field name="kuber_deploy"/>
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_kuber_template" model="ir.actions.act_window">
            <field name="name">Templates</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kuber.template</field>
            
            <field name="view_mode">kanban,list,form,graph</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_vi ew_nocontent_create">
                Click to add a new Templates
                </p><p>
                Click the Create button to add a new Templates
                </p>
            </field>
        </record>        
    </data>
</odoo>