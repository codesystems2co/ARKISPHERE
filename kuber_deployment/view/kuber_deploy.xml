<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_kuber_deploy_tree" model="ir.ui.view">
            <field name="name">kuber_deploy_tree</field>
            <field name="model">kuber.deploy</field>
            
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <list string="Application Deployment">                    
                    <field name="name" />
                    <field name="identifier" />
                    <field name="kuber_docker_image" />   
                    <field name="product_template" />                   
                </list>
            </field>
        </record>
        <!-- form view -->
        <record id="view_kuber_deploy_form" model="ir.ui.view">
            <field name="name">kuber_deploy_form</field>
            <field name="model">kuber.deploy</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Application Deployment">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Application Deployment Name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="identifier" />
                                <field name="kuber_docker_image" /> 
                                <field name="product_template" />                                  
                            </group>
                        </group>
                        <notebook>
                            <page string="Templatess">
                                <field name="kuber_template"/>                                
                            </page>
                            <page string="Repositories">
                                <field name="git_repositories" />                               
                            </page>
                            <page string="Commands">
                                <field name="kuber_commands" />                               
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_kuber_deploy_search" model="ir.ui.view">
            <field name="name">kuber_deploy</field>
            <field name="model">kuber.deploy</field>
            <field name="arch" type="xml">
                <search string="Application Deployment">

                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <field name="name" select="True"/>
                    <field name="identifier" />
                    <field name="kuber_commands" />  
                    <field name="product_template" />   
                    <group string="Group By..">
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_kuber_deploy_kanban" model="ir.ui.view" >
            <field name="name">kuber_deploy</field>
            <field name="model">kuber.deploy</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <field name="name" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>
                                        <li>
                                            Tags Built Image: <field name="kuber_docker_image" />
                                        </li>
                                        <li>
                                            Identifier: <field name="identifier" />
                                        </li>
                                        <li invisible="not product_template">
                                            Product: <field name="product_template" /> 
                                        </li>  
                                        
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <!-- graph -->
        <record id="view_kuber_deploy_graph" model="ir.ui.view">
            <field name="name">kuber_deploy</field>
            <field name="model">kuber.deploy</field>
            <field name="arch" type="xml">
                <graph string="Application Deployment" type="bar">
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_kuber_deploy" model="ir.actions.act_window">
            <field name="name">Application Deployment</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kuber.deploy</field>
            
            <field name="view_mode">kanban,list,form</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Application Deployment
                </p><p>
                Click the Create button to add a new Application Deployment
                </p>
            </field>
        </record>        
    </data>
</odoo>