<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_kuber_commands_tree" model="ir.ui.view">
            <field name="name">kuber_commands_tree</field>
            <field name="model">kuber.commands</field>
            
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <list string="Server Commands">
                    <field name="name" />
                    <field name="branch" />
                    <field name="is_private" widget="boolean_toggle"/>
                    <field name="product_attribute_id" optional="hide"/>
                    <field name="product_attribute_value_ids" optional="hide" widget="many2many_tags"/>
                </list>
            </field>
        </record>
        <!-- form view -->
        <record id="view_kuber_commands_form" model="ir.ui.view">
            <field name="name">kuber_commands_form</field>
            <field name="model">kuber.commands</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Kuber Command">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Server Command"/>
                            <span><field name="name"/></span>
                        </div>
                        <group>
                            <group>
                                <field name="is_private"  widget="boolean_toggle"/>
                                <field name="branch" />                               
                            </group>
                            <group>
                                <field name="product_attribute_id" 
                                       invisible="not is_private" 
                                       required="is_private"/>
                                <field name="product_attribute_value_ids" 
                                       widget="many2many_tags"
                                       invisible="not is_private" 
                                       required="is_private"
                                       domain="[('attribute_id', '=', product_attribute_id)]"/>
                            </group>
                        </group>
                         <notebook>
                            <page string="Deployments">
                                <field name="kuber_deployments" nolabel="1"/>
                            </page>
                        </notebook>
                      
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_kuber_commands_search" model="ir.ui.view">
            <field name="name">kuber_commands</field>
            <field name="model">kuber.commands</field>
            <field name="arch" type="xml">
                <search string="Server Commands">
                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <field name="name" select="True"/>
                    <field name="is_private" />
                    <field name="kuber_deployments"/>
                    <field name="branch" select="True"/>
                    <field name="product_attribute_id"/>
                    <field name="product_attribute_value_ids"/>
                    <group string="Group By..">
                        <filter string="Kuber branch" domain="[]" name="group_by_branch" context="{'group_by':'branch'}"/>
                        <filter string="Product Attribute" domain="[]" name="group_by_attribute" context="{'group_by':'product_attribute_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_kuber_commands_kanban" model="ir.ui.view" >
            <field name="name">kuber_commands</field>
            <field name="model">kuber.commands</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <field name="name" />
                    <field name="branch" />
                    <field name="is_private" />
                    <field name="product_attribute_id" />
                    <field name="product_attribute_value_ids" />
                    
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <span>
                                        <a type="open"><field name="name"/></a>
                                    </span>
                                    <ul>
                                        <li invisible="not branch">
                                            branch: <field name="branch"></field>
                                        </li>
                                        <li>
                                            private: <field name="is_private" widget="boolean_toggle"></field>
                                        </li>
                                        <li t-if="record.is_private.raw_value and record.product_attribute_id.raw_value">
                                            <i class="fa fa-tag"></i> <field name="product_attribute_id"></field>
                                        </li>
                                        <li t-if="record.is_private.raw_value and record.product_attribute_value_ids.raw_value">
                                            <i class="fa fa-tags"></i> <field name="product_attribute_value_ids" widget="many2many_tags"></field>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <!-- graph -->
        <record id="view_kuber_commands_graph" model="ir.ui.view">
            <field name="name">kuber_commands</field>
            <field name="model">kuber.commands</field>
            <field name="arch" type="xml">
                <graph string="Kuber command" type="bar">
                    <field name="is_private"></field>
                    <field name="branch"/>
                    <field name="kuber_deployments"/>
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_kuber_commands" model="ir.actions.act_window">
            <field name="name">Server Commands</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kuber.commands</field>
            
            <field name="view_mode">list,kanban,form,graph</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_vi ew_nocontent_create">
                Click to add a new Server Commands
                </p><p>
                Click the Create button to add a new Server Commands
                </p>
            </field>
        </record>        
    </data>
</odoo>