<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_kuber_domains_tree" model="ir.ui.view">
            <field name="name">kuber_domains_tree</field>
            <field name="model">kuber.domains</field>
            
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <list string="Hostnames">
                    <field name="name" />
                    <field name="port" />
                    <field name="branch" />
                </list>
            </field>
        </record>
        <!-- form view -->
        <record id="view_kuber_domains_form" model="ir.ui.view">
            <field name="name">kuber_domains_form</field>
            <field name="model">kuber.domains</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Kuber Command">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Hostnames Name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="port" /> 
                                <field name="branch" />                               
                            </group>
                            <group>
                                <field name="domain_ssl" />                               
                            </group>
                        </group>                      
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_kuber_domains_search" model="ir.ui.view">
            <field name="name">kuber_domains</field>
            <field name="model">kuber.domains</field>
            <field name="arch" type="xml">
                <search string="Hostnames">
                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <field name="name" select="True"/>
                    <field name="port" select="True"/>
                    <field name="branch" select="True"/>
                    <group string="Group By..">
                        <filter string="Kuber branch" domain="[]" name="group_by_branch" context="{'group_by':'branch'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_kuber_domains_kanban" model="ir.ui.view" >
            <field name="name">kuber_domains</field>
            <field name="model">kuber.domains</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <field name="name" />
                    <field name="branch" />
                    
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>
                                        <li>
                                            port: <field name="port"></field>
                                        </li>
                                        <li>
                                            branch: <field name="branch"></field>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <!-- graph -->
        <record id="view_kuber_domains_graph" model="ir.ui.view">
            <field name="name">kuber_domains</field>
            <field name="model">kuber.domains</field>
            <field name="arch" type="xml">
                <graph string="Kuber command" type="bar">
                    <field name="port"></field>
                    <field name="branch"/>
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_kuber_domains" model="ir.actions.act_window">
            <field name="name">Hostnames</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kuber.domains</field>
            
            <field name="view_mode">kanban,list,form,graph</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_vi ew_nocontent_create">
                Click to add a new Hostnames
                </p><p>
                Click the Create button to add a new Hostnames
                </p>
            </field>
        </record>        
    </data>
</odoo>