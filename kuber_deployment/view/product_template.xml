<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- form view -->
        <record id="view_sh_kuber_product_template_inherit" model="ir.ui.view">
            <field name="name">sh_kuber_product_template</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[last()]" position="after">
                    <page string="Deployments">
                        <group>
                            <field name="kuber_deployments" string="Deployment"/>                                
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</odoo>