<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <report id="report_sh_git_branch_menu" string="My addon - Branches"
         model="sh.git_branch" report_type="qweb-pdf" 
         file="sh.git_branch"  name="sh_git.sh_git_branch_report" />

        <!-- document template -->
        <template id="sh_git.sh_git_branch_report_document" >
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
                <div class="page">
                    <h2>
                        Branches: <span t-field="doc.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2">
                            <strong>Sha</strong>
                            <p class="m-0" t-field="doc.sha" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Node</strong>
                            <p class="m-0" t-field="doc.node_id" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Author</strong>
                            <p class="m-0" t-field="doc.author" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Repository</strong>
                            <p class="m-0" t-field="doc.repository"/>
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="sh_git.sh_git_branch_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="sh_git.sh_git_branch_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>