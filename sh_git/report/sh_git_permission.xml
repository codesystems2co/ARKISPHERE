<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <report id="report_sh_git_permissions_menu" string="My addon - Permission"
         model="sh.git_permissions" report_type="qweb-pdf" 
         file="sh.git_permissions"  name="sh_git.sh_git_permissions_report" />

        <!-- document template -->
        <template id="sh_git.sh_git_permissions_report_document" >
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
                <div class="page">
                    <h2>
                        Permission: <span t-field="doc.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2">
                            <strong>Pull</strong>
                            <p class="m-0" t-field="doc.pull" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Push</strong>
                            <p class="m-0" t-field="doc.push" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Admin</strong>
                            <p class="m-0" t-field="doc.admin" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Collaborator</strong>
                            <p class="m-0" t-field="doc.collaborator"/>
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="sh_git.sh_git_permissions_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="sh_git.sh_git_permissions_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>