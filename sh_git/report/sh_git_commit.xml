<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <report id="report_sh_git_commit_menu" string="My addon - Sh git commit"
         model="sh.git_commit" report_type="qweb-pdf" 
         file="sh.git_commit"  name="sh_git.sh_git_commit_report" />

        <!-- document template -->
        <template id="sh_git.sh_git_commit_report_document" >
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
                <div class="page">
                    <h2>
                        Sh git commit: <span t-field="doc.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2">
                            <strong>Sha</strong>
                            <p class="m-0" t-field="doc.sha" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Node</strong>
                            <p class="m-0" t-field="doc.node_id" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Url</strong>
                            <p class="m-0" t-field="doc.url" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Message</strong>
                            <p class="m-0" t-field="doc.message" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Username</strong>
                            <p class="m-0" t-field="doc.username" />
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
                <h2>Branch</h2>
                <table class="table table-sm o_main_table" name="branch_table">
                    <thead>
                        <tr>
                            <td> name</td>
                            <td>Name</td>
                            <td>Sha</td>
                            <td>Node</td>
                            <td>Author</td>
                            <td>Repository</td>
                            <td>Commits</td>
                        </tr>
                    </thead>
                    <tbody class="branch_tbody">
                        <tr t-foreach="doc.branch" t-as="line">
                            <td><span t-field="line._name" /></td>
                            <td><span t-field="line.name" /></td>
                            <td><span t-field="line.sha" /></td>
                            <td><span t-field="line.node_id" /></td>
                            <td><span t-field="line.author" /></td>
                            <td><span t-field="line.repository" /></td>
                            <td><span t-field="line.commits" /></td>
                        </tr> <!-- foreach-->
                    </tbody>
                </table>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="sh_git.sh_git_commit_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="sh_git.sh_git_commit_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>