<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <report id="report_sh_git_repository_menu" string="My addon - Repository"
         model="sh.git_repository" report_type="qweb-pdf" 
         file="sh.git_repository"  name="sh_git.sh_git_repository_report" />

        <!-- document template -->
        <template id="sh_git.sh_git_repository_report_document" >
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
                <div class="page">
                    <h2>
                        Repository: <span t-field="doc.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2">
                            <strong>Identifier</strong>
                            <p class="m-0" t-field="doc.identifier" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Full name</strong>
                            <p class="m-0" t-field="doc.full_name" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Collaborators</strong>
                            <p class="m-0" t-field="doc.collaborators"/>
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
                <h2>Branches</h2>
                <table class="table table-sm o_main_table" name="branches_table">
                    <thead>
                        <tr>
                            <td> name</td>
                            <td>Name</td>
                            <td>Sha</td>
                            <td>Node</td>
                            <td>Author</td>
                            <td>Repository</td>
                        </tr>
                    </thead>
                    <tbody class="branches_tbody">
                        <tr t-foreach="doc.branches" t-as="line">
                            <td><span t-field="line._name" /></td>
                            <td><span t-field="line.name" /></td>
                            <td><span t-field="line.sha" /></td>
                            <td><span t-field="line.node_id" /></td>
                            <td><span t-field="line.author" /></td>
                            <td><span t-field="line.repository" /></td>
                        </tr> <!-- foreach-->
                    </tbody>
                </table>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="sh_git.sh_git_repository_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="sh_git.sh_git_repository_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>