<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_Autor_tree" model="ir.ui.view">
            <field name="name">Autor_tree</field>
            <field name="model">git.autor</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <list string="Autor">
                    <field name="name" />                    
                    <field name="is_autor" invisible="1"/>
                    <field name="is_collaborator" invisible="1" widget="boolean_toggle"/>
                    <field name="username" />
                    <field name="_gpassword" password="True"  invisible="1"/>
                    <field name="html_url"  invisible="1"/>
                    <field name="identifier" invisible="1"/>
                    <field name="platform" />
                </list>
            </field>
        </record>

        <!-- form view -->
        <record id="view_Autor_form" model="ir.ui.view">
            <field name="name">Autor_form</field>
            <field name="model">git.autor</field>
            
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Autor">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Autor Name"/>
                            <h1><field name="name" readonly="1"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="is_autor" readonly="1" widget="boolean_toggle"/>
                                <field name="is_collaborator" invisible="1" widget="boolean_toggle"/>
                                <field name="platform" readonly="1"/>
                                <field name="username" readonly="1"/>
                                <field name="_gpassword" password="True" readonly="1"/>
                                <field name="html_url" widget='url' readonly="1"/>
                                <field name="identifier" readonly="1"/>                                
                            </group>
                            <group>
                                <field name="access_token" password="True" readonly="1"/>  
                            </group>
                        </group>
                        <notebook>
                             <page string="Repositories">
                                <field name="repositories" readonly="1"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- search -->
        <record id="view_Autor_search" model="ir.ui.view">
            <field name="name">Autor</field>
            <field name="model">git.autor</field>
            <field name="arch" type="xml">
                <search string="Autor">

                    <filter string="Platform" name="filter_by_platform" domain="[('platform','=','')]" />
                    <filter string="Identifier" name="filter_by_identifier" domain="[('identifier','=','')]" />
                    <filter string="Username" name="filter_by_username" domain="[('username','=','')]" />
                    <filter string="Html url" name="filter_by_html_url" domain="[('html_url','=','')]" />
                    <field name="platform" select="True"/>
                    <field name="identifier" select="True"/>
                    <field name="username" select="True"/>
                    <field name="html_url" select="True"/>
                    <group string="Group By..">
                    </group>
                </search>
            </field>
        </record>
        
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_Autor_kanban" model="ir.ui.view" >
            <field name="name">Autor</field>
            <field name="model">git.autor</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <field name="platform" />
                    <field name="identifier" />
                    <field name="username" />
                    <field name="html_url" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <i class="fa fa-user"/>  <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>
                                        <ul>
                                            <li>
                                                From: <field name="platform"></field>
                                            </li>
                                        </ul>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <!-- graph -->
        <record id="view_Autor_graph" model="ir.ui.view">
            <field name="name">Autor</field>
            <field name="model">git.autor</field>
            <field name="arch" type="xml">
                <graph string="Autor" type="bar">
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_Autor" model="ir.actions.act_window">
            <field name="name">Autor</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">git.autor</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="domain">[("is_autor","=",True)]</field>
            <field name="context">{"search_default_is_autor":True}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Autor
                </p><p>
                Click the Create button to add a new Autor
                </p>
            </field>
        </record>
        
    </data>
</odoo>