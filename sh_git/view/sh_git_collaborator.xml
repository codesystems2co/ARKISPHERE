<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_Collaborator_tree" model="ir.ui.view">
            <field name="name">Collaborator_tree</field>
            <field name="model">git.collaborator</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <list string="Collaborators">
                    <field name="name"/>
                    <field name="username"/>
                    <field name="is_collaborator" widget="boolean_toggle" readonly="1" />
                </list>
            </field>
        </record>
        <!-- form view -->
        <record id="view_Collaborator_form" model="ir.ui.view">
            <field name="name">Collaborator_form</field>
            <field name="model">git.collaborator</field>
            
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Collaborators">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Collaborators Name"/>
                            <h1><field name="name" readonly="1"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="is_collaborator" widget="boolean_toggle" readonly="1" />
                            </group>
                            <group>
                            </group>
                        </group>
                        <notebook>
                            <page string="Permission">
                                <field name="permission"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_Collaborator_search" model="ir.ui.view">
            <field name="name">Collaborator</field>
            <field name="model">git.collaborator</field>
            <field name="arch" type="xml">
                <search string="Collaborators">
                    <group string="Group By..">
                        <filter string="is_collaborator" domain="[('is_collaborator','=',True)]" name="group_by_collaborators" context="{'group_by':'is_collaborator'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_Collaborator_kanban" model="ir.ui.view" >
            <field name="name">Collaborator</field>
            <field name="model">git.collaborator</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>
                                        <li>
                                            <i class="fa fa-user"></i> <field name="username"></field>
                                        </li>
                                        <li>
                                            <i class="fa fa-github"></i> <field name="is_collaborator" readonly="1" widget="boolean_toggle"/>
                                        </li>
                                        
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <!-- graph -->
        <record id="view_Collaborator_graph" model="ir.ui.view">
            <field name="name">Collaborator</field>
            <field name="model">git.collaborator</field>
            <field name="arch" type="xml">
                <graph string="Collaborators" type="bar">
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_Collaborator" model="ir.actions.act_window">
            <field name="name">Collaborators</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">git.collaborator</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="domain">[("is_collaborator","=",True)]</field>            
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Collaborators
                </p><p>
                Click the Create button to add a new Collaborators
                </p>
            </field>
        </record>

        
    </data>
</odoo>