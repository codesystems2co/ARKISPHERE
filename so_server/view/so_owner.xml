<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_res_partner_tree" model="ir.ui.view">
            <field name="name">res_partner_tree</field>
            <field name="model">so.owner</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <list string="Owners">
                    <field name="name" />
                    <field name="is_autor" />
                </list>
            </field>
        </record>
        <!-- form view -->
        <record id="view_res_partner_form" model="ir.ui.view">
            <field name="name">res_partner_form</field>
            <field name="model">so.owner</field>            
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Owner">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Owner Name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="name" />
                                <field name="is_autor" />
                            </group>
                            <group>
                            </group>
                        </group>
                        <notebook>    
                            <page name="server_owners" string="Servers">
                                <group>
                                    <field name="so_servers" />
                                </group>
                            </page>                                         
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_res_partner_search" model="ir.ui.view">
            <field name="name">res_partner</field>
            <field name="model">so.owner</field>
            <field name="arch" type="xml">
                <search string="Owner">

                    <filter string="name" name="filter_by_name" domain="[('name','=','')]" />
                    <field name="name" select="True"/>
                    <group string="Group By..">
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_res_partner_kanban" model="ir.ui.view" >
            <field name="name">res_partner</field>
            <field name="model">so.owner</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <field name="name" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                       <i class="fa fa-user"/> <a type="open"><field name="name"/></a>
                                    </h4>                                    
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <!-- graph -->
        <record id="view_res_partner_graph" model="ir.ui.view">
            <field name="name">res_partner</field>
            <field name="model">so.owner</field>
            <field name="arch" type="xml">
                <graph string="Owners" type="bar">
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_so_owner" model="ir.actions.act_window">
            <field name="name">Owner</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">so.owner</field>
            <field name="domain">[("is_autor","=",True)]</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Owner
                </p><p>
                Click the Create button to add a new Owner
                </p>
            </field>
        </record>
        
    </data>
</odoo>