
<odoo>
	<data>
		<record id="view_order_form_server_cloud_provider" model="ir.ui.view">
            <field name="name">view_order_form_server_cloud_provider</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="cloud_provider" domain="[('state','=',True)]"/>
                </xpath>         
            </field>
        </record>
    </data>
</odoo>