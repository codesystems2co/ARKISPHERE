<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_sh_production_tree" model="ir.ui.view">
            <field name="name">sh_production_tree</field>
            <field name="model">sh.production</field>
            
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <list string="Production">
                    <field name="name" />
                </list>
            </field>
        </record>
        <!-- form view -->
        <record id="view_sh_production_form" model="ir.ui.view">
            <field name="name">sh_production_form</field>
            <field name="model">sh.production</field>
            
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Production">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Production Name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                            </group>
                            <group>
                            </group>
                        </group>
                        <notebook>
                            <page string="Branch">
                                <field name="branch"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_sh_production_search" model="ir.ui.view">
            <field name="name">sh_production</field>
            <field name="model">sh.production</field>
            <field name="arch" type="xml">
                <search string="Production">

                    <group string="Group By..">
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_sh_production_kanban" model="ir.ui.view" >
            <field name="name">sh_production</field>
            <field name="model">sh.production</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>
                                        <li>
                                            Field1: <field name="name"></field>
                                        </li>
                                        <li>
                                            Field2: <field name="name"></field>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <!-- graph -->
        <record id="view_sh_production_graph" model="ir.ui.view">
            <field name="name">sh_production</field>
            <field name="model">sh.production</field>
            <field name="arch" type="xml">
                <graph string="Production" type="bar">
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_sh_production" model="ir.actions.act_window">
            <field name="name">Production</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sh.production</field>
            
            <field name="view_mode">kanban,list,form</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Production
                </p><p>
                Click the Create button to add a new Production
                </p>
            </field>
        </record>
        <record id="action_sh_git_branch_production" model="ir.actions.act_window">
            <field name="name">Branches</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sh.git_branch</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Branches
                </p><p>
                Click the Create button to add a new Branches
                </p>
            </field>
        </record>

       <!-- <menuitem id="menu_sh_production" name="Production" parent="sh_stages_top_menu" action="action_sh_production" sequence="2"/>
        <menuitem id="menu_sh_production_item" name="Stages" parent="menu_sh_production" action="action_sh_production" sequence="0"/>
        <menuitem id="menu_sh_git_branch_sub" name="Branches" parent="menu_sh_production" action="action_sh_git_branch_production" sequence="1" groups="base.group_user"/>-->
    </data>
</odoo>