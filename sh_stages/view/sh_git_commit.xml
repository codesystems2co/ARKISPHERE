<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_sh_git_commit_tree" model="ir.ui.view">
            <field name="name">sh_git_commit_tree</field>
            <field name="model">sh.git_commit</field>
            
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <list string="Sh git commit">
                </list>
            </field>
        </record>
        <!-- form view -->
        <record id="view_sh_git_commit_form" model="ir.ui.view">
            <field name="name">sh_git_commit_form</field>
            <field name="model">sh.git_commit</field>
            
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Sh git commit">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Sh git commit Name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                            </group>
                            <group>
                            </group>
                        </group>
                        <notebook>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_sh_git_commit_search" model="ir.ui.view">
            <field name="name">sh_git_commit</field>
            <field name="model">sh.git_commit</field>
            <field name="arch" type="xml">
                <search string="Sh git commit">

                    <group string="Group By..">
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_sh_git_commit_kanban" model="ir.ui.view" >
            <field name="name">sh_git_commit</field>
            <field name="model">sh.git_commit</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>
                                        <li>
                                            Field1: <field name="name"></field>
                                        </li>
                                        <li>
                                            Field2: <field name="name"></field>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <!-- graph -->
        <record id="view_sh_git_commit_graph" model="ir.ui.view">
            <field name="name">sh_git_commit</field>
            <field name="model">sh.git_commit</field>
            <field name="arch" type="xml">
                <graph string="Sh git commit" type="bar">
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_sh_git_commit" model="ir.actions.act_window">
            <field name="name">Sh git commit</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sh.git_commit</field>
            
            <field name="view_mode">kanban,list,form</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Sh git commit
                </p><p>
                Click the Create button to add a new Sh git commit
                </p>
            </field>
        </record>
        <!--<menuitem id="menu_sh_git_commit_production" name="Commits" parent="menu_sh_production" action="action_sh_git_commit" sequence="20"/>
        <menuitem id="menu_sh_git_commit_development" name="Commits" parent="menu_sh_development" action="action_sh_git_commit" sequence="20"/>-->
    </data>
</odoo>